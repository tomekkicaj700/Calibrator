<Window
    x:Class="Calibrator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Calibrator.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calibrator"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Calibrator"
    Width="1360"
    Height="760"
    Closing="Window_Closing"
    Focusable="True"
    KeyDown="Window_KeyDown"
    Loaded="Window_Loaded"
    SizeChanged="Window_SizeChanged"
    StateChanged="Window_StateChanged"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--  Menu Bar  -->
        <Menu Grid.Row="0"
                Background="#F0F0F0">
            <MenuItem Header="_Plik">
                <Separator/>
                <MenuItem Click="Exit_Click"
                        Header="_Wyjście">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="✖"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Połączenie">
                <MenuItem Click="btnScanPorts_Click"
                        Header="_Skanuj porty">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="🔌"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="btnScanUSRDevices_Click"
                        Header="Skanuj _USR-N520">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="🌐"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="btnScanAllDevices_Click"
                        Header="Skanuj _wszystkie">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="🔍"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Click="btnTcpServer_Click"
                        Header="_Serwer TCP">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="🌐"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Kalibracja">
                <MenuItem Click="btnReadConfig_Click"
                        Header="_Odczytaj konfigurację">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="📖"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="btnReadWeldParams_Click"
                        Header="_Parametry zgrzewania">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="⚡"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Click="btnResetStats_Click"
                        Header="_Resetuj statystyki">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="↺"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Zapisz kalibrację">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="💾"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Kontrola">
                <MenuItem Click="btnRun_Click"
                        Header="_RUN/STOP">
                    <MenuItem.Icon>
                        <TextBlock
                            x:Name="menuIconRun"
                            FontSize="16"
                            Text="▶"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Interwał próbkowania">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="⏱"/>
                    </MenuItem.Icon>
                    <MenuItem
                        Click="SetInterval_Click"
                        Header="3 x/s"
                        Tag="333"/>
                    <MenuItem
                        Click="SetInterval_Click"
                        Header="0.5 s"
                        Tag="500"/>
                    <MenuItem
                        Click="SetInterval_Click"
                        Header="1 s"
                        Tag="1000"/>
                    <MenuItem
                        Click="SetInterval_Click"
                        Header="2 s"
                        Tag="2000"/>
                    <MenuItem
                        Click="SetInterval_Click"
                        Header="3 s"
                        Tag="3000"/>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Widok">
                <MenuItem Header="_Panel logów">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="📋"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Pomoc">
                <MenuItem Click="ShowKeyboardShortcuts_Click"
                        Header="_Skróty klawiaturowe">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="⌨"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Click="btnOpenConfig_Click"
                    Header="_Zapisz konfigurację"
                    ToolTip="Zapisz plik konfiguracji">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="💾"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Click="ShowAbout_Click"
                        Header="_O programie">
                    <MenuItem.Icon>
                        <TextBlock FontSize="16"
                                Text="ℹ"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!--  Główny obszar: StackPanel z przyciskami, TabControl  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel
                Margin="0,0,0,10"
                Background="AntiqueWhite"
                Orientation="Horizontal">
                <Button
                    x:Name="btnScanPorts"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Click="btnScanPorts_Click"
                    FontSize="16"
                    ToolTip="Skanuj porty">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="🔌"/>
                </Button>
                <Button
                    x:Name="btnScanUSRDevices"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Background="Blue"
                    Click="btnScanUSRDevices_Click"
                    FontSize="16"
                    Foreground="White"
                    ToolTip="Skanuj USR-N520">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="🌐"/>
                </Button>
                <Button
                    x:Name="btnScanAllDevices"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Background="Purple"
                    Click="btnScanAllDevices_Click"
                    FontSize="16"
                    Foreground="White"
                    ToolTip="Skanuj wszystkie">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="🔍"/>
                </Button>
                <Button
                    x:Name="btnReadConfig"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Click="btnReadConfig_Click"
                    FontSize="16"
                    ToolTip="Odczytaj konfigurację">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="📖"/>
                </Button>
                <Button
                    x:Name="btnSaveCalibration"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Background="Blue"
                    FontSize="16"
                    Foreground="White"
                    ToolTip="Zapisz kalibrację">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="💾"/>
                </Button>
                <Button
                    x:Name="btnRun"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Background="Green"
                    Click="btnRun_Click"
                    FontSize="16"
                    Foreground="White"
                    ToolTip="RUN/STOP">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="▶"/>
                </Button>
                <Button
                    x:Name="btnReadWeldParams"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Click="btnReadWeldParams_Click"
                    FontSize="16"
                    ToolTip="Odczytaj parametry zgrzewania">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="⚡"/>
                </Button>
                <Button
                    x:Name="btnResetStats"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="0,0,10,0"
                    Background="Orange"
                    Click="btnResetStats_Click"
                    FontSize="16"
                    Foreground="White"
                    ToolTip="Resetuj statystyki">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="↺"/>
                </Button>
                <ComboBox
                    x:Name="comboInterval"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"
                    VerticalContentAlignment="Center"
                    FontSize="16">
                    <ComboBoxItem
                        Content="3 x/s"
                        IsSelected="True"
                        Tag="333"/>
                    <ComboBoxItem Content="0.5 s"
                            Tag="500"/>
                    <ComboBoxItem Content="1 s"
                            Tag="1000"/>
                    <ComboBoxItem Content="2 s"
                            Tag="2000"/>
                    <ComboBoxItem Content="3 s"
                            Tag="3000"/>
                </ComboBox>
                <TextBlock
                    x:Name="txtStatus"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"/>
                <Button
                    x:Name="btnToggleLogPanel"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="10,0,0,0"
                    Click="btnToggleLogPanel_Click"
                    FontSize="16"
                    ToolTip="Panel logów">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="📋"/>
                </Button>
                <Button
                    x:Name="btnOpenConfig"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="5,0,0,0"
                    Click="btnOpenConfig_Click"
                    FontSize="16"
                    ToolTip="Otwórz plik konfiguracji">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="⚙"/>
                </Button>
                <Button
                    x:Name="btnTcpServer"
                    MinWidth="40"
                    MinHeight="40"
                    Margin="5,0,0,0"
                    Click="btnTcpServer_Click"
                    FontSize="16"
                    ToolTip="Uruchom serwer TCP">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="🌐"/>
                </Button>
            </StackPanel>
            <TabControl
                x:Name="mainTabControl"
                Grid.Row="1"
                FontSize="16">
                <!--  Tab 1: Parametry zgrzewania  -->
                <TabItem Tag="weld_parameters">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Margin="0,0,10,0"
                                Padding="8,3"
                                Background="#B71C1C"
                                CornerRadius="5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="F1"/>
                            </Border>
                            <TextBlock Text="Parametry zgrzewania"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:WeldParametersTab
                        x:Name="weldParametersTab"
                        Margin="0,0,6,0"
                        Loaded="weldParametersTab_Loaded"/>
                </TabItem>
                <!--  Tab 2: Parametry kalibracji  -->
                <TabItem Tag="calibration_parameters">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Margin="0,0,10,0"
                                Padding="8,3"
                                Background="#B71C1C"
                                CornerRadius="5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="F2"/>
                            </Border>
                            <TextBlock Text="Parametry kalibracji"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:CalibrationParametersTab x:Name="calibrationParametersTab"/>
                </TabItem>
                <TabItem Tag="measurement_history">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Margin="0,0,10,0"
                                Padding="8,3"
                                Background="#B71C1C"
                                CornerRadius="5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="F3"/>
                            </Border>
                            <TextBlock Text="Historia kalibracji"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:MeasurementHistoryTab x:Name="measurementHistoryTab"/>
                </TabItem>
                <TabItem Tag="measurement_history_new">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Margin="0,0,10,0"
                                Padding="8,3"
                                Background="#B71C1C"
                                CornerRadius="5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="F4"/>
                            </Border>
                            <TextBlock Text="Historia pomiarów"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:MeasurementHistoryNewTab
                        x:Name="measurementHistoryNewTab"
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Loaded="measurementHistoryNewTab_Loaded"/>
                </TabItem>
                <TabItem Tag="info">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Margin="0,0,10,0"
                                Padding="8,3"
                                Background="#B71C1C"
                                CornerRadius="5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="F5"/>
                            </Border>
                            <TextBlock Text="INFO"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:InfoTab x:Name="infoTab"/>
                </TabItem>
                <TabItem Tag="communication">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Margin="0,0,10,0"
                                Padding="8,3"
                                Background="#B71C1C"
                                CornerRadius="5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="F6"/>
                            </Border>
                            <TextBlock Text="Komunikacja"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:CommunicationTab x:Name="communicationTab"/>
                </TabItem>
            </TabControl>
        </Grid>

        <!--  GridSplitter do regulacji wysokości logPanel  -->
        <GridSplitter
            x:Name="logSplitter"
            Grid.Row="2"
            Height="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="#DDD"
            ShowsPreview="True"/>

        <!--  LogPanel w osobnym wierszu, bez Height  -->
        <controls:LogPanel
            x:Name="logPanel"
            Grid.Row="2"
            MinHeight="60"
            MaxHeight="400"/>

        <!--  Status Bar na samym dole  -->
        <StatusBar Grid.Row="3"
                Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock
                    x:Name="txtStatusSection0"
                    FontSize="12"
                    Text="Status: Gotowy"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock
                    x:Name="txtStatusSection1"
                    FontSize="12"
                    Foreground="Blue"
                    Text="Komendy/s: 0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock
                    x:Name="txtStatusSection2"
                    FontSize="12"
                    Text="Połączenie: Brak"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock
                    x:Name="txtStatusSection3"
                    FontSize="12"
                    Text="Czas: 00:00:00"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
