<UserControl
    x:Class="Calibrator.Controls.MeasurementStatisticsComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="600"
    d:DesignHeight="120">
    <StackPanel Margin="0,1,0,1"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            VerticalAlignment="Bottom">
        <!--  Napięcie  -->
        <Border Margin="8"
                Padding="10"
                BorderBrush="#00BCD4"
                BorderThickness="2"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Napięcie [V]"/>
                <TextBlock x:Name="txtVoltageMax"
                        Margin="0,2"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="Max: 0,00"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtVoltageAvg"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#2196F3"
                        Text="Śr: 0,00"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtVoltageMin"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#4CAF50"
                        Text="Min: 0,00"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtVoltageDelta"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FF9800"
                        Text="Δ: 0,00"
                        TextAlignment="Right"/>
            </StackPanel>
        </Border>
        <!--  Prąd  -->
        <Border Margin="8"
                Padding="10"
                BorderBrush="#00BCD4"
                BorderThickness="2"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Prąd [A]"/>
                <TextBlock x:Name="txtCurrentMax"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="Max: 0,00"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtCurrentAvg"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Purple"
                        Text="Śr: 0,00"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtCurrentMin"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#4CAF50"
                        Text="Min: 0,00"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtCurrentDelta"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FF9800"
                        Text="Δ: 0,00"
                        TextAlignment="Right"/>
            </StackPanel>
        </Border>
        <!--  ADC Napięcia  -->
        <Border Margin="8"
                Padding="10"
                BorderBrush="#00BCD4"
                BorderThickness="2"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="ADC Napięcia"/>
                <TextBlock x:Name="txtVoltageADCMax"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="Max: 00000"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtVoltageADCAvg"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#2196F3"
                        Text="Śr: 00000"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtVoltageADCMin"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#4CAF50"
                        Text="Min: 00000"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtVoltageADCDelta"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FF9800"
                        Text="Δ: 00000"
                        TextAlignment="Right"/>
            </StackPanel>
        </Border>
        <!--  ADC Prądu  -->
        <Border Margin="8"
                Padding="10"
                BorderBrush="#00BCD4"
                BorderThickness="2"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="ADC Prądu"/>
                <TextBlock x:Name="txtCurrentADCMax"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="Max: 00000"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtCurrentADCAvg"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#2196F3"
                        Text="Śr: 00000"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtCurrentADCMin"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#4CAF50"
                        Text="Min: 00000"
                        TextAlignment="Right"/>
                <TextBlock x:Name="txtCurrentADCDelta"
                        Margin="0,2"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas, Courier New, monospace"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FF9800"
                        Text="Δ: 00000"
                        TextAlignment="Right"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl> 