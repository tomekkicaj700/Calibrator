<UserControl
    x:Class="Calibrator.Controls.MeasurementHistoryNewTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:Calibrator.Controls"
    d:DesignHeight="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                    MinWidth="150"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="400"
                    MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <!--  Lewa kolumna: tabela pomiarów  -->
        <DataGrid
            x:Name="dataGridMeasurements"
            Grid.Row="0"
            Grid.Column="0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="All"
            IsReadOnly="True"
            RenderTransformOrigin="0.5,0.5"
            FontSize="18"
            BorderBrush="#E0E0E0"
            Margin="5">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness"
                            Value="0,0,0,1"/>
                    <Setter Property="BorderBrush"
                            Value="#F5F5F5"/>
                    <Setter Property="Padding"
                            Value="6,2,6,2"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.216"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.996"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Width="70"
                                    Binding="{Binding Index}"
                                    Header="Lp."/>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Timestamp}"
                                    Header="Czas"/>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Voltage, StringFormat=F2}"
                                    Header="Napięcie [V]">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground"
                                    Value="#2196F3"/>
                            <Setter Property="FontWeight"
                                    Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Current, StringFormat=F2}"
                                    Header="Prąd [A]">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground"
                                    Value="Purple"/>
                            <Setter Property="FontWeight"
                                    Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding VoltageADC, StringFormat=D5}"
                                    Header="ADC Napięcia">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground"
                                    Value="#2196F3"/>
                            <Setter Property="FontWeight"
                                    Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding CurrentADC, StringFormat=D5}"
                                    Header="ADC Prądu">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground"
                                    Value="Purple"/>
                            <Setter Property="FontWeight"
                                    Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSessionSeparator}"
                                     Value="True">
                            <Setter Property="Background"
                                    Value="#FFFDE7"/>
                            <Setter Property="FontWeight"
                                    Value="Bold"/>
                            <Setter Property="FontSize"
                                    Value="16"/>
                            <Setter Property="Foreground"
                                    Value="#FF5722"/>
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- SPLITTER -->
        <GridSplitter Grid.Row="0"
                      Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Stretch"
                      Background="#EEE"
                      ShowsPreview="True"/>

        <!--  Prawa kolumna: komponent Gauge i statystyki  -->
        <Grid Grid.Row="0"
              Grid.Column="2"
              Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <controls:WeldMeasurementsComponent
                x:Name="weldMeasurementsComponent"
                Margin="0,1,0,1"
                ShowStatistics="False"
                Grid.Row="0"/>
            <controls:MeasurementStatisticsComponent
                x:Name="measurementStatisticsComponent"
                Grid.Row="1"/>
        </Grid>

        <!--  Przyciski na dole  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                x:Name="btnCalculateStats"
                Width="150"
                Height="35"
                Margin="5"
                Click="btnCalculateStats_Click"
                Content="Oblicz statystyki"/>
            <Button
                x:Name="btnOpenDataFile"
                Width="150"
                Height="35"
                Margin="5"
                Click="btnOpenDataFile_Click"
                Content="Otwórz plik danych"/>
            <Button
                x:Name="btnClearData"
                Width="150"
                Height="35"
                Margin="5"
                Click="btnClearData_Click"
                Content="Wyczyść dane"/>
            <Button
                x:Name="btnResetStats"
                Width="180"
                Height="35"
                Margin="5"
                Background="Red"
                Click="btnResetStats_Click"
                Foreground="White">
                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        FontSize="18"
                        Text="↺"/>
                    <TextBlock FontSize="16"
                               Text="Resetuj statystyki"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>